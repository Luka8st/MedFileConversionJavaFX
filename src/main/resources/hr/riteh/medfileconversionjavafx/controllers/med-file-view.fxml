<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox alignment="CENTER" prefHeight="341.0" prefWidth="372.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.riteh.medfileconversionjavafx.controllers.MedFileController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ChoiceBox fx:id="imageFormatBox" onAction="#onFormatChoiceMade">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Laboratory-HSI" />
                <String fx:value="SpecimIQ-HSI" />
            </FXCollections>
        </items>
    </ChoiceBox>

    <VBox alignment="CENTER" spacing="5.0">
        <Button fx:id="selectLoadDirectoryBtn" onAction="#onSelectLoadDirectoryClick" text="Select directory to load files from" />
        <Label fx:id="loadDirectoryLabel" text="Selected: None" style="-fx-text-fill: grey;"/>
    </VBox>

    <VBox alignment="CENTER" spacing="5.0">
        <Button fx:id="selectStoreDirectoryBtn" onAction="#onSelectStoreDirectoryClick" text="Select directory to store results to" />
        <Label fx:id="storeDirectoryLabel" text="Selected: None" style="-fx-text-fill: grey;"/>
    </VBox>

    <Button fx:id="loadBtn" disable="true" onAction="#onLoadBtnClick" text="Generate and display the image" />

</VBox>
